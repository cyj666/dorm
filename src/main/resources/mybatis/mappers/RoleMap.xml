<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dorm.mapper.RoleMapper">
 	<!-- <cache type = "org.mybatis.caches.ehcache.EhcacheCache"/>--> 
 	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

<resultMap id="roleMap" type="com.dorm.pojo.Role">  
    <id property="roleId" column="role_id"/>  
    <result property="roleName" column="role_name"/>  
    <result property="roleDesc" column="role_desc"/> 
    <!-- 进行 多表关联插叙，关联role和permission -->     
    <collection property="permissionSet" column="permission_id" ofType="com.dorm.pojo.Permission">  
    <id property="permissionId" column="permission_id"/>  
    <result property="permissionName" column="permission_name"/>  
    <result property="permissionDesc" column="permission_desc"/>   
    </collection>        
    </resultMap> 
    

	<select id="getRole" resultType="Role" parameterType="role">
		select * from roles
		<where>
		<if test="roleId != null and roleId !='' ">
       	and room_id = #{roleId}
        </if>
        <if test="roleName != null and roleName !='' ">
       	and role_name = #{roleName}
        </if>
        <if test="roleDesc != null and roleDesc !='' ">
       	and role_desc = #{roleDesc}
        </if>       
		</where>
	</select>
	
		
	
	<select id="getAllRole" resultType="Role">
		select * from roles 
	</select>
	
	
	<select id="getAllRoleDetails" resultMap="roleMap">
		select * from roles r RIGHT JOIN roles_permissions rp on r.role_id = rp.role_id 
		LEFT JOIN permissions p ON rp.permission_id = p.permission_id 
	</select>

	

	
	<insert id="addRole" useGeneratedKeys="true" keyProperty="role_id" parameterType="role">
		insert into
		roles(role_name,role_desc)
		values(#{roleName},#{roleDesc})
	</insert>
	


	<delete id="deleteRole" parameterType="role">
        delete  from roles
		<where>
        <if test="roleId != null and roleId !='' ">
       	and role_id = #{roleId}
        </if> 
        <if test="roleName != null and roleName !='' ">
       	and role_name = #{roleName}
        </if>
        </where>
    </delete>
    
         
    <update id="updateRole" parameterType="role">
    update roles
    <set>
        <if test="roleName != null and roleName !='' ">
       	 role_name = #{roleName},
        </if>
        <if test="roleDesc != null and roleDesc !='' ">
       	role_desc = #{roleDesc},
        </if>       
    </set>
    <where>
    	role_id = #{roleId}
    </where>  
    </update>
        

</mapper>